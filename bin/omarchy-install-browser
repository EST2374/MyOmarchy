#!/bin/bash

if (($# == 0)); then
  echo "Usage: omarchy-install-browser [vivaldi|firefox|chrome]"
  exit 1
fi

package="$1"

# Map package name to desktop entry ID
case "$package" in
vivaldi) desktop_id="vivaldi.desktop" ;;
firefox) desktop_id="firefox.desktop" ;;
chrome) desktop_id="chrome.desktop" ;;
*)
  echo "Unknown browser: $package"
  exit 1
  ;;
esac

# Install package
if [[ $package != "chrome" ]]; then
  omarchy-pkg-add $package
else
  echo "Failed to install $package"
fi
# Yay install for chrome
if [[ $package == "chrome" ]]; then
  yay -S google-chrome
else
  echo "Failed to install $package"
fi

